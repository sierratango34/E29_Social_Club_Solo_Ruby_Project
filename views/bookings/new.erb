<h1>Create New Booking</h1>

<h4><a href="/e29-social-club/bookings">Bookings Home</a></h4>
<h4><a href="/e29-social-club/events/new">Add New Event</a></h4>


<form action="/e29-social-club/bookings" method="post">
  Member:
  <select name="member_id" class="new-booking" >
    <% for member in @all_members %>
      <option value="<%= member.id%>"<%= "selected" if @member_in_question != nil && member.id == @member_in_question.id %>><%= member.pretty_name %></option>
    <% end %>
  </select>

  Event:
  <select name="event_id" class="new-booking" >
    <% for event in @all_events %>
      <% if event.has_spaces? %>
        <option value="<%= event.id %>"><%= event.type %></option>
      <% end %>
    <% end %>
  </select>

  <input type="submit" value="Add Booking">
</form>
