<h1><%= @event.type %></h1>

<h4><a href="/e29-social-club/events">Events Home</a></h4>

<p>Max Capacity: <%= @event.max_capacity %></p>
<p>Confirmed Bookings: <%= @event.confirmed_bookings_count %></p>


<div class="event-edit-confirm-delete">
  <table>
    <td>
      <button type="button" class="edit-button">
        <a class="edit" href="/e29-social-club/events/<%=@event.id%>/edit">Edit Event</a>
      </button>
    </td>
    <td>
      <button type="button" class="add-button">
        <a href="/e29-social-club/events/new">Add New Event</a>
      </button>
    </td>
    <td>
      <form action="/e29-social-club/events/<%=@event.id%>/delete" method="post">
        <input type="submit" value="Delete Event">
      </form>
    </td>
  </table>
</div>

<div class="bookings-table">
<% if @event.members_attending_and_their_booking_ids.count != 0%>
<table>
  <tr>
    <th class="table-head" colspan="2">All Bookings</th>
  </tr>
  <tr>
    <th>Booking Reference</th>
    <th>Member</th>
  </tr>
  <% for member in @event.members_attending_and_their_booking_ids %>

  <tr>
    <td><a href="/e29-social-club/bookings/<%=member['booking_id'].to_i%>"><%=member['booking_id']%></a></td>
    <td><a href="/e29-social-club/members/<%=member['member_id'].to_i%>"><%=member['first_name']%> <%=member['last_name']%></a></td>
  </tr>
  <% end %>
</table>
<% end %>

<% if @event.confirmed_members_attending_and_their_booking_ids.count != 0 %>

<table>
  <tr>
    <th class="table-head" colspan="2">Confirmed Bookings</th>
  </tr>
  <tr>
    <th>Booking Reference</th>
    <th>Member</th>
  </tr>
  <% for member in @event.confirmed_members_attending_and_their_booking_ids %>
  <tr>
    <td><a href="/e29-social-club/bookings/<%=member['booking_id'].to_i%>"><%=member['booking_id']%></a></td>
    <td><a href="/e29-social-club/members/<%=member['member_id'].to_i%>"><%=member['first_name']%> <%=member['last_name']%></a></td>
  </tr>
  <% end %>
</table>
<% end %>
</div>
