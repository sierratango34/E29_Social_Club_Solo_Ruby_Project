<h1><%= @event.type %></h1>

<nav>
  <a href="/e29-social-club/events">Events Home</a>
</nav>

<p>Max Capacity: <%= @event.max_capacity %></p>
<p>Confirmed Bookings: <%= @event.confirmed_bookings_count %></p>

<a href="/e29-social-club/events/<%=@event.id%>/edit">Edit Event</a>

<form action="/e29-social-club/events/<%=@event.id%>/delete" method="post">
  <input type="submit" value="Delete Event">
</form>

<h3>All Bookings</h3>

<table>
  <tr>
    <th>Booking Reference</th>
    <th>Member</th>
  </tr>
  <% for member in @event.members_attending_and_their_booking_ids %>
  <tr>
    <td><a href="/e29-social-club/bookings/<%=member['booking_id'].to_i%>"><%=member['booking_id']%></a></td>
    <td><a href="/e29-social-club/members/<%=member['member_id'].to_i%>"><%=member['first_name']%> <%=member['last_name']%></a></td>
  </tr>
  <% end %>
</table>

<h3>Confirmed Bookings</h3>
<table>
  <tr>
    <th>Booking Reference</th>
    <th>Member</th>
  </tr>
  <% for member in @event.confirmed_members_attending_and_their_booking_ids %>
  <tr>
    <td><a href="/e29-social-club/bookings/<%=member['booking_id'].to_i%>"><%=member['booking_id']%></a></td>
    <td><a href="/e29-social-club/members/<%=member['member_id'].to_i%>"><%=member['first_name']%> <%=member['last_name']%></a></td>
  </tr>
  <% end %>
</table>
