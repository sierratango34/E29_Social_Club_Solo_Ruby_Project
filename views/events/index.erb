<h1>All Events</h1>

<nav>
  <a href="/e29-social-club/events/new">Add New Event</a>
</nav>

<table>
  <tr>
    <th>Type</th>
    <th>Max Capacity</th>
    <th>All Bookings</th>
    <th>Confirmed Bookings</th>
    <th></th>
  </tr>

  <% for event in @events %>
  <tr>
    <td><%=event.type%></td>
    <td><%=event.max_capacity%></td>
    <td><%=event.all_bookings_count%></td>
    <td><%=event.confirmed_bookings_count%></td>
    <td><a href="/e29-social-club/events/<%=event.id%>">More Details</a></td>
  </tr>
  <% end %>

</table>
