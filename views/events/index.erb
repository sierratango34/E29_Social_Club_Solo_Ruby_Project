<h2>All Events</h2>

<h4><a href="/events/new">Add New Event</a></h4>

<div class="search-bar">
  <form action="/events" method="get">
    <input class="search-bar" type="text" name="type">
    <input type="submit" name="search" value="Search for Event">
  </form>
</div>

<table>
  <tr>
    <th>Type</th>
    <th>Max Capacity</th>
    <th>All Bookings</th>
    <th>Confirmed Bookings</th>
    <th></th>
  </tr>

  <% for event in @events %>
  <tr>
    <td><%=event.type%></td>
    <td><%=event.max_capacity%></td>
    <td><%=event.all_bookings_count%></td>
    <td><%=event.confirmed_bookings_count%></td>
    <td><a href="/events/<%=event.id%>">More Details</a></td>
  </tr>
  <% end %>

</table>
